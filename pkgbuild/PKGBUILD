pkgname=neofetch
pkgver=$(date +%y.%m.%d)
pkgrel=$(date +%H%M)
pkgdesc="A CLI system information tool written in BASH that supports displaying images."
arch=('any')
url="https://github.com/biglinux/$pkgname"
license=('MIT')
# depends=('')
provides=("$pkgname")
source=("git+${url}.git")
sha256sums=('SKIP')


package() {
    cp -r "${srcdir}/${pkgname}/usr/" "${pkgdir}/"
}
